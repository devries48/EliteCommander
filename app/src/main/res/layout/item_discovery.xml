<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium">

    <androidx.cardview.widget.CardView
        style="@style/EliteCardViewItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bodyImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_planet_star_discoveries"
                android:maxWidth="72dp"
                android:maxHeight="72dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bodyNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_large"
                android:text=""
                android:textAppearance="@style/eliteStyle.LightOrangeText"
                app:layout_constraintStart_toEndOf="@+id/bodyImageView"
                app:layout_constraintTop_toTopOf="@+id/bodyImageView" />

            <TextView
                android:id="@+id/discoveriesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=""
                android:textAppearance="@style/eliteStyle.YellowText"
                app:layout_constraintStart_toStartOf="@+id/bodyNameTextView"
                app:layout_constraintTop_toBottomOf="@+id/bodyNameTextView" />

            <TextView
                android:id="@+id/mappedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:text=""
                android:textAppearance="@style/eliteStyle"
                app:layout_constraintStart_toEndOf="@+id/discoveriesTextView"
                app:layout_constraintTop_toTopOf="@+id/discoveriesTextView" />

            <TextView
                android:id="@+id/bonusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text=""
                android:textAppearance="@style/eliteStyle.YellowText"
                app:layout_constraintStart_toEndOf="@+id/mappedTextView"
                app:layout_constraintTop_toTopOf="@+id/mappedTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>

