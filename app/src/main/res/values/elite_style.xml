<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="eliteStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/eurocaps</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="eliteStyle.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="eliteStyle.DialogText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="eliteStyle.SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="eliteStyle.YellowText">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="eliteStyle.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="eliteStyle.LightOrangeText">
        <item name="android:textColor">@color/light_orange</item>
    </style>

    <style name="eliteStyle_RedText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eliteStyle_AzureText">
        <item name="android:textColor">@color/azure</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eliteStyle.BodyDiscovery">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="eliteStyle.BodyDiscovery.Value" parent="eliteStyle.BodyDiscovery">
        <item name="android:textColor">@color/light_orange</item>
    </style>

    <style name="eliteStyle.BodyDiscovery.First" parent="eliteStyle.BodyDiscovery">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="EliteCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_dark</item>
    </style>

    <style name="EliteCardViewItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_item</item>
    </style>

    <style name="BusyStyle">
        <item name="colorAccent">@color/orange</item>
    </style>
</resources>