<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="eliteStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/elite_orange</item>
        <item name="android:fontFamily">@font/eurocaps</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="eliteStyle.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="eliteStyle.DialogTitle" parent="eliteStyle.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="eliteStyle.DialogText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="eliteStyle.SmallText">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="eliteStyle.YellowText">
        <item name="android:textColor">@color/elite_yellow</item>
    </style>

    <style name="eliteStyle.LightOrangeText">
        <item name="android:textColor">@color/elite_light_orange</item>
    </style>

    <style name="eliteStyle_RedText">
        <item name="android:textColor">@color/elite_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eliteStyle_AzureText">
        <item name="android:textColor">@color/elite_azure</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eliteStyle.Rank">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="eliteStyle.BodyDiscovery">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="eliteStyle.BodyDiscovery.Value" parent="eliteStyle.BodyDiscovery">
        <item name="android:textColor">@color/elite_light_orange</item>
    </style>

    <style name="eliteStyle.BodyDiscovery.First" parent="eliteStyle.BodyDiscovery">
        <item name="android:textColor">@color/elite_yellow</item>
    </style>

    <style name="EliteCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_background</item>
    </style>

    <style name="EliteCardViewItem" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/item_background</item>
    </style>

    <style name="BusyRankStyle">
        <item name="colorAccent">@color/elite_orange</item>
    </style>


</resources>